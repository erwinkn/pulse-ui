{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"lineWidth": 100,
		"indentStyle": "tab"
	},
	"files": {
		"includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs}", "**/*.{ts,tsx,js,jsx,cjs,mjs}"]
	}
}
