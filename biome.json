{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"includes": ["**", "!docs/app/playground/**"],
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"lineWidth": 100,
		"indentStyle": "tab"
	},
	"files": {
		"includes": [
			"docs/**/*.{ts,tsx,js,jsx,cjs,mjs}",
			"examples/**/*.{ts,tsx,js,jsx,cjs,mjs}",
			"packages/**/*.{ts,tsx,js,jsx,cjs,mjs}",
			"scripts/**/*.{ts,tsx,js,jsx,cjs,mjs}",
			"tutorial/**/*.{ts,tsx,js,jsx,cjs,mjs}"
		]
	}
}
