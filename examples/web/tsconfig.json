{
	"include": [
		"**/*",
		"src/**/*",
		"server/**/*"
	],
	"compilerOptions": {
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ES2022"
		],
		"types": [
			"node",
			"vite/client"
		],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"allowJs": true,
		"rootDirs": [
			"."
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"./app/*"
			],
			"pulse/*": [
				"./app/pulse/*"
			]
		},
		"customConditions": [
			"@pulse/source"
		],
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
	},
}
